<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <title>KTH | {{title}}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{{description}}">
  <link rel="shortcut icon" id="favicon" href="//www.kth.se/img/icon/favicon.ico">

  {{#if canonicalUrl}}
  <link href="{{canonicalUrl}}" rel="canonical">
  {{/if}}

  {{prefixStyle '/static/kth-style/css/kth-bootstrap.css' 'styles' 'screen'}}
  {{prefixStyle '/static/app.css' 'styles' 'screen'}}

  {{{render 'styles'}}}
  {{prefixScript '/static/tinymce/tinymce.min.js' 'head-scripts'}}
  {{prefixScript '/static/vendor.js' 'head-scripts'}}
  {{prefixScript '/static/browserConfig' 'head-scripts'}}

  {{#extend 'head-scripts'}}
  <script src="//www.kth.se/social/toolbar/widget.js"></script>
  {{/extend}}

  {{{render 'head-scripts'}}}
</head>

<body>
  <a class="skipToMainContent" href="#mainContent" tabindex="1">{{i18n 'skip_to_main_content' lang}}</a>

  {{> kthHeader }}
  <div class="container main">
    <div class="row">
      {{!-- TODO: CHECK IF IT IS NEEDED --}}
      <div class="col app">
        {{{body}}}
      </div>
    </div>
  </div>
  {{{render 'scripts'}}}
</body>

</html>