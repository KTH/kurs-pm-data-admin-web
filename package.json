{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-data-admin-web",
  "version": "2.0.0",
  "description": "Kurs-pm administation tool and editor to create a kurs-pm by filling in data in editor and fetching data from syllabus",
  "main": "app.js",
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-data-admin-web.git"
  },
  "scripts": {
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "lint:new": "eslint \"public/**/*.{js,jsx}\" --quiet",
    "test": "NODE_ENV=test jest",
    "test-preview": "NODE_ENV=test jest ./test/unit/PreviewContainerFilledIn.test.js",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:notify": "NODE_ENV=test jest --watch --notify",
    "vendor": "parcel build  ./public/js/vendor.js",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && parcel build ./public/js/app/ssr-app.js && npm run vendor --preserve-comments",
    "build-dev": "cross-env NODE_ENV=development rm -rf dist && parcel build ./public/js/vendor.js --public-url /kursinfoadmin/kurs-pm-data/static && parcel build ./public/js/app/ssr-app.js && parcel watch ./public/js/app/app.jsx --public-url /kursinfoadmin/kurs-pm-data/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\"",
    "build:bash": "bash ./build.sh prod /kursinfoadmin/kurs-pm-data",
    "build-dev:bash": "bash ./build.sh dev /kursinfoadmin/kurs-pm-data",
    "start:bash": "bash -c 'NODE_ENV=production node app.js'",
    "start-dev:bash": "bash -c 'NODE_ENV=development concurrently --kill-others -n build,app \"npm run build-dev:bash\" \"nodemon app.js\"'"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@kth/kth-kip-style-react-components": "0.0.26",
    "@tinymce/tinymce-react": "^3.10.4",
    "applicationinsights": "^1.8.10",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.1",
    "kth-node-access-log": "^0.2.2",
    "kth-node-api-call": "^3.0.13",
    "kth-node-configuration": "^2.0.3",
    "kth-node-express-routing": "^2.0.5",
    "kth-node-i18n": "^1.0.5",
    "kth-node-ldap": "^4.0.1",
    "kth-node-log": "^3.1.3",
    "kth-node-monitor": "^1.1.9",
    "kth-node-passport-cas": "^3.1.15",
    "kth-node-redis": "^3.1.19",
    "kth-node-server": "^3.1.2",
    "kth-node-session": "^1.0.4",
    "kth-node-web-common": "^5.1.12",
    "kth-style": "^6.0.13",
    "locale": "^0.1.0",
    "mobx": "^6.1.8",
    "mobx-react": "^7.1.0",
    "passport": "^0.4.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-router-hash-link": "^2.4.0",
    "react-sticky": "^6.0.3",
    "reactstrap": "^8.9.0",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-runtime": "^7.13.7",
    "@babel/preset-env": "7.13.8",
    "@babel/preset-react": "^7.12.13",
    "@kth/eslint-config-kth": "^1.0.10",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chai": "^4.3.3",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mockery": "^2.1.0",
    "nock": "^13.0.11",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react-test-renderer": "^17.0.1",
    "sass": "^1.32.8"
  },
  "engines": {
    "node": "14.0.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}
