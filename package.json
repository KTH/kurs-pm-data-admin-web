{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-data-admin-web",
  "version": "4.0.0",
  "description": "Kurs-pm administation tool and editor to create a kurs-pm by filling in data in editor and fetching data from syllabus",
  "main": "app.js",
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-data-admin-web.git"
  },
  "scripts": {
    "build": "bash ./build.sh prod",
    "build-dev": "bash ./build.sh dev",
    "cy:open": "NODE_ENV=development cypress open -C test/e2e/cypress.env.config.js",
    "cy:run": "npx cypress run -C test/e2e/cypress.env.config.js --browser chrome",
    "cy:run:chrome": "npx cypress run -C test/e2e/cypress.env.config.js --browser chrome",
    "cy:run:ff": "npx cypress run -C test/e2e/cypress.env.config.js --browser firefox",
    "cy:run:edge": "npx cypress run -C test/e2e/cypress.env.config.js --browser edge",
    "cy:run:electron": "npx cypress run -C test/e2e/cypress.env.config.js --browser electron",
    "cy:run:tests": "bash -c 'NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"npm run cy:run:chrome\"'",
    "docker": "npm install --development && npm run build && npm prune --production",
    "docker:build": "bash ./docker-build-image.sh dev",
    "docker:run": "bash ./docker-run-image.sh dev",
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "lint:new": "eslint \"public/**/*.{js,jsx}\" --quiet",
    "mini-css-extract-plugin": "yarn add mini-css-extract-plugin --no-lockfile --ignore-scripts",
    "prepare": "husky install",
    "postinstall": "npm run mini-css-extract-plugin && bash -c 'rm -rf ./dist; rm -rf ./node_modules/.cache/webpack'",
    "start": "bash -c 'cat /KTH_NODEJS; NODE_ENV=production node app.js'",
    "start-dev": "bash -c 'NODE_ENV=development concurrently --kill-others -n build,app \"npm run build-dev\" \"nodemon app.js\"'",
    "test": "NODE_ENV=test jest --testPathIgnorePatterns=test/e2e",
    "test:mockapi": "docker-compose -f test/mock-api/docker-compose.yml up --build --force-recreate",
    "test-integration-in-docker": "ID=$(docker build -q .) && LOCAL_IMAGE_ID=$ID docker-compose -f docker-compose-integration-tests.yml up --build --abort-on-container-exit --always-recreate-deps --force-recreate",
    "test-win": "cross-env NODE_ENV=test jest --testPathIgnorePatterns=test/e2e",
    "test-preview": "NODE_ENV=test jest ./test/unit/PreviewContainerFilledIn.test.js --watch --notify",
    "test-new-memo": "NODE_ENV=test jest ./test/unit/CreateNewMemo.test.js --watch --notify",
    "test-pub-memo": "NODE_ENV=test jest ./test/unit/ChangePublished.test.js --watch --notify",
    "test-edit-new": "NODE_ENV=test jest ./test/unit/MemoContainerNewDraft.test.js --watch --notify",
    "test-edit-published": "NODE_ENV=test jest ./test/unit/MemoContainerPublished.test.js --watch --notify",
    "test-kopps": "NODE_ENV=test jest ./test/unit/kopps-parseSyllabus.test.js --watch --notify",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:notify": "NODE_ENV=test jest --watch --notify"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "@kth/api-call": "^4.0.40",
    "@kth/kth-node-passport-oidc": "^5.0.0",
    "@kth/kth-node-web-common": "^7.0.12",
    "@kth/kth-reactstrap": "^0.4.55",
    "@kth/log": "^4.0.5",
    "@kth/monitor": "^3.0.25",
    "@kth/server": "^4.0.4",
    "@kth/session": "^3.0.4",
    "@kth/ug-rest-api-helper": "^1.0.9",
    "@tinymce/tinymce-react": "^3.13.0",
    "applicationinsights": "^2.3.4",
    "axios": "^0.27.2",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "kth-node-access-log": "^0.2.9",
    "kth-node-configuration": "^2.0.12",
    "kth-node-express-routing": "^2.0.15",
    "kth-node-i18n": "^1.0.15",
    "kth-node-redis": "^3.1.43",
    "kth-style": "^6.0.25",
    "mobx": "^6.6.2",
    "mobx-react": "^7.5.2",
    "passport": "^0.6.0",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "react-icons": "^4.3.1",
    "react-router": "^6.4.3",
    "react-router-dom": "^6.2.2",
    "react-router-hash-link": "^2.4.3",
    "react-sticky": "^6.0.3",
    "reactstrap": "^9.1.4",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@faker-js/faker": "^7.5.0",
    "@kth/eslint-config-kth": "^3.0.10",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^29.0.1",
    "babel-jest": "^29.0.1",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.7",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cypress": "^10.7.0",
    "decache": "^4.6.1",
    "eslint": "^8.23.0",
    "file-loader": "^6.2.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.1.2",
    "jest-extended": "^3.1.0",
    "mini-css-extract-plugin": "^2.6.1",
    "mockery": "^2.1.0",
    "nock": "^13.2.9",
    "node-mocks-http": "^1.11.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.20",
    "null-loader": "^4.0.1",
    "path": "^0.12.7",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.56.1",
    "sass-loader": "^13.0.2",
    "set-value": "^4.1.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "engines": {
    "node": "16"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}
